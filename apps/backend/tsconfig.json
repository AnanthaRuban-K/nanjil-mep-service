{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022"],
    "module": "CommonJS",
   "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
   
    "allowJs": true,
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}