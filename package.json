    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/cors": "^2.8.19",
    "@types/node": "20.19.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "autoprefixer": "10.4.13",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.4",
    "esbuild": "^0.19.2",
    "nx": "21.4.1",
    "postcss": "8.4.38",
    "prettier": "^2.6.2",
    "tailwindcss": "3.4.3",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.3.0",
    "tsx": "^4.20.5",
    "typescript": "~5.8.2"
  },
