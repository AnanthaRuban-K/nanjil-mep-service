{
  "name": "@nanjil-mep-service/source",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd apps/frontend && npm run start",
    "start:backend": "cd apps/backend && npm run start",
    "install:all": "npm install && cd apps/frontend && npm install && cd ../backend && npm install",
    "clean": "rm -rf node_modules apps/*/node_modules dist apps/*/.next"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.3.0"
  },
  "workspaces": [
    "apps/*"
  ]
}